<div class="banner">
  <div class="container">
    <h1>Cocktails list</h1>
    <%= link_to 'Add a new cocktail', new_cocktail_path %>
  </div>
</div>
<div class="container">
  <div class="cocktails">
    <% @cocktails.each do |cocktail|%>
      <%= link_to cocktail_path(cocktail) do %>
          <div class="card-product">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
            <p> <%= cocktail.name.capitalize %> </p>
          </div>
        <% end %>
    <% end %>
 </div>
</div>
