<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose|%>
<%= puts dose %>
<div class="cocktail">
  <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete dose', dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"} %>
</div>
<% end %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to 'Go back to cocktails list', cocktails_path %>
