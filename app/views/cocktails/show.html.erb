<div class="banner">
  <div class="container">
    <h1><%= @cocktail.name.capitalize %></h1>
  </div>
</div>

<div class="container">

  <% @cocktail.doses.each do |dose|%>
  <%= puts dose %>
  <div class="cocktails">
    <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete dose', dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"} %>

  </div>
  <% end %>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'Go back to cocktails list', root_path %>
</div>
